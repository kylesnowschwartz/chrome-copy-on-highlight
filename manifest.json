{
  "manifest_version": 3,
  "name": "Copy on Select",
  "version": "1.0.0",
  "description": "Automatically copy selected text to clipboard",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
